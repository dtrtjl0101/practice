{
  "family": "chaekit-prod-task",
  "networkMode": "bridge",
  "executionRoleArn": "arn:aws:iam::880996438467:role/ecsTaskExecutionRole",
  "requiresCompatibilities": ["EC2"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "ecs-prod-container",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        },
        {
          "name": "DB_URL"
        },
        {
          "name": "DB_USERNAME"
        },
        {
          "name": "DB_PASSWORD"
        },
        {
          "name": "DB_DRIVER_CLASS",
          "value": "com.mysql.cj.jdbc.Driver"
        },
        {
          "name": "JPA_DIALECT",
          "value": "org.hibernate.dialect.MySQLDialect"
        },
        {
          "name": "REDIS_URL"
        },
        {
          "name": "JWT_SECRET"
        },
        {
          "name": "JWT_EXPIRATION_MS",
          "value": "3600000"
        },
        {
          "name": "JWT_REFRESH_EXPIRATION_MS",
            "value": "1209600000"
        },
        {
          "name": "ADMIN_NAME",
          "value": "admin"
        },
        {
          "name": "ADMIN_EMAIL",
          "value": "admin@example.com"
        },
        {
          "name": "ADMIN_PASSWORD"
        },
        {
          "name": "GMAIL_ADDRESS"
        },
        {
          "name": "GMAIL_PASSWORD"
        },
        {
          "name": "GOOGLE_CLIENT_ID"
        },
        {
          "name": "GOOGLE_CLIENT_SECRET"
        },
        {
          "name": "KAKAO_PAY_REDIRECT_BASE_URL",
          "value": "https://chaekit.com"
        },
        {
          "name": "KAKAO_PAY_CID"
        },
        {
          "name": "KAKAO_PAY_SECRET_KEY"
        },
        {
          "name": "EBOOK_BUCKET_NAME",
          "value": "chaekit"
        },
        {
          "name": "IMAGE_BUCKET_NAME",
          "value": "chaekit-image"
        },
        {
          "name": "AWS_S3_REGION",
          "value": "ap-northeast-2"
        },
        {
          "name": "EBOOK_MAX_FILE_SIZE",
          "value": "20971520"
        },
        {
          "name": "PRESIGNED_URL_EXPIRATION_TIME",
          "value": "3600"
        },
        {
          "name": "AWS_ACCESS_KEY_ID"
        },
        {
          "name": "SECRET_ACCESS_KEY"
        },
        {
          "name": "CORS_ALLOWED_ORIGINS",
          "value": "http://localhost:*,https://chaekit.com"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/new-chaekit-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs",
          "mode": "non-blocking",
          "max-buffer-size": "25m",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
